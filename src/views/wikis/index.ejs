<!DOCTYPE html>
<html>

<head>
  <% include ../static/partials/head.ejs %>
  <!-- Jumbotron Header -->
  <header class="jumbotron my-4">
    <h1 class="display-3">Welcome to Blocipedia</h1>
      <a href="/users/new" class="btn btn-primary btn-lg"
      >Create New Wiki</a
      >
  </header>
</head>

<body>
  <main class="container">
    <% include ../static/partials/navbar.ejs %>

      <% include ../static/partials/messages.ejs %>

        <h1>Wikis</h1>
        <% if(currentUser) { %>
          <a href="/wikis/new" class="btn btn-success">Create</a>
          <% } %>
            <ul class="list-group">

              <% wikis.forEach((wiki) => { %>
                <li class="list-group-item">
                  <a href="/wikis/<%= wiki.id %>">
                    <%= wiki.title %>
                  </a>
                </li>
                <% }) %>
            </ul>
  </main>
</body>

</html>